<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="BCBOT_FILE_APPENDER" class="org.apache.log4j.RollingFileAppender">
		<param name="MaxFileSize" value="5MB" />
		<param name="MaxBackupIndex" value="2" />
		<param name="file" value="/var/log/bcbot/bcbot.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss.SSS} %-5p [%t][%c] %m%n" />
		</layout>
	</appender>
	
<!-- Loggers -->
	<logger name="xyz.sergevas.iot.bcbot" additivity="false">
		<level value="debug" />
		<appender-ref ref="BCBOT_FILE_APPENDER" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="debug" />
		<appender-ref ref="BCBOT_FILE_APPENDER" />
	</root>
</log4j:configuration>
